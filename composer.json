{
  "name": "johnwatkins0/wp-site-stats",
  "description": "A WordPress plugin providing a frontend widget showing stats about sites in a multisite network.",
  "type": "library",
  "scripts": {
    "phpcbf": "phpcbf --extensions=php",
    "lint": "phpcs --extensions=php -s"
  },
  "authors": [
    {
      "name": "John Watkins",
      "email": "johnwatkins0@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "JohnWatkins\\SiteStats\\": "site-stats/"
    },
    "files": [
      "site-stats.php"
    ]
  }
}
